<!DOCTYPE html>
<html class="h-full bg-gray-50">
  <head>
    <title>ChromaUi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full">
    <% configuration = {
      current_controller: controller_name,
      server: server,
      version: version,
      menu_items: [
        {
          name: t("menu.collections"),
          type: :stroke,
          icon: t("menu.icons.collections"),
          path: collections_path,
          controller: :collections
        }
      ]
    } %>
    <div data-controller="sidebar" data-sidebar-backdrop-outlet=".backdrop">
      <!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
      <div class="relative z-50 lg:hidden" role="dialog" aria-modal="true">
        <%= render Application::Mobile.new(**configuration) %>
      </div>

      <!-- Static sidebar for desktop -->
      <%= render Application::DesktopSidebar.new(**configuration) %>

      <%= render Application::MobileBar.new(controller_name: controller_name) %>

      <main class="py-10 lg:pl-72">
        <div class="px-4 sm:px-6 lg:px-8">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
